<form class="form-horizontal">

    <h3>{{ _("Filament") }}</h3>

    <div class="control-group">
        <label class="control-label">{{ _('Price') }}</label>
        <div class="controls">
            <div class="input-append">
                <input type="number" step="0.01" min="0" class="input-mini text-right"
                    data-bind="value: settings.plugins.costestimation.costOfFilament">
                <span class="add-on">€</span>
            </div>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">{{ _('Weight') }}</label>
        <div class="controls">
            <div class="input-append">
                <input type="number" step="1" min="0" class="input-mini text-right"
                    data-bind="value: settings.plugins.costestimation.weightOfFilament">
                <span class="add-on">g</span>
            </div>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">{{ _('Density') }}</label>
        <div class="controls">
            <div class="input-append">
                <input type="number" step="0.01" min="0" class="input-mini text-right"
                    data-bind="value: settings.plugins.costestimation.densityOfFilament">
                <span class="add-on">g/cm<sup>3</sup></span>
            </div>
        </div>
    </div>

    <h3>{{ _("Operating costs") }}</h3>

    <div class="control-group">
        <label class="control-label">{{ _('Power consumption') }}</label>
        <div class="controls">
            <div class="input-append">
                <input type="number" step="0.01" min="0" class="input-mini text-right"
                    data-bind="value: settings.plugins.costestimation.powerConsumption">
                <span class="add-on">kW</span>
            </div>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label">{{ _('Electricity costs') }}</label>
        <div class="controls">
            <div class="input-append">
                <input type="number" step="0.01" min="0" class="input-mini text-right"
                    data-bind="value: settings.plugins.costestimation.costOfElectricity">
                <span class="add-on">€/kWh</span>
            </div>
        </div>
    </div>

</form>
